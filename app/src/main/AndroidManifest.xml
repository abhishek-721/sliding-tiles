<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.creativeideas.slidingtiles">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/appId"/>

        <activity android:name=".MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BaseActivity" />
        <activity android:name=".PauseMenu" android:theme="@style/ActivityDialogTheme" android:launchMode="singleTop" android:screenOrientation="portrait" />
        <activity android:name=".ReturnConfirmation" android:theme="@style/ActivityDialogTheme" android:launchMode="singleTop" android:screenOrientation="portrait"/>
        <activity android:name=".RestartConfirmation" android:theme="@style/ActivityDialogTheme" android:launchMode="singleTop" android:screenOrientation="portrait"/>
        <activity android:name=".QuitConfirmation" android:theme="@style/ActivityDialogTheme" android:launchMode="singleTop" android:screenOrientation="portrait"/>
        <activity android:name=".Completion" android:theme="@style/ActivityDialogTheme" android:launchMode="singleTop" android:screenOrientation="portrait"/>
    </application>

</manifest>